material {
    name : BakedColor,
    requires : [
        color
    ],
    shadingModel : unlit,
    blending : transparent,
    culling : none,
    featureLevel : 0,
    parameters : [
        { type : float4, name : tint }
    ]
}

fragment {
    void material(inout MaterialInputs material) {
        prepareMaterial(material);
        material.baseColor = getColor() * materialParams.tint;
    }
}
