material {
    name : BakedColor,
    requires : [
        color
    ],
    shadingModel : unlit,
    blending : transparent,
    culling : none,
    featureLevel : 0,
    parameters : [
        { type : float4, name : tint }
    ]
}

fragment {
    void material(inout MaterialInputs material) {
        prepareMaterial(material);
        vec4 c = getColor() * materialParams.tint;
        c.rgb *= c.a;
        material.baseColor = c;
    }
}
